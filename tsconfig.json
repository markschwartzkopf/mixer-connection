{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "noEmitOnError": true,
    "strict": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "incremental": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "forceConsistentCasingInFileNames": true
  }
}
