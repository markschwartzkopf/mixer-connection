{
	"globals": {
		"__dirname": "readonly"
	},
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
	"overrides": [],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		"semi": ["error", "always"],
    "@typescript-eslint/no-explicit-any": 0,
    "no-mixed-spaces-and-tabs": 0
	}
}
